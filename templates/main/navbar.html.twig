<div class="navbar top-0 sticky bg-base-100">
  <div class="flex-1">
    <a class="btn btn-ghost text-xl" href={{path('app_main')}}>MATOS<span class="inline-block align-bottom text-primary text-sm">Beta</span></a>
    {% if is_granted('ROLE_ADMIN') %}
      <a class="btn btn-outline btn-error" href={{path('admin')}}>Admin</a>
    {% endif %}
  </div>
  
  {% for category in categories??[] %}
    {% if category|length > 0 and category.slug != "accessories" %}
      <a href="#{{ category|lower }}" class="btn btn-ghost mx-1 hidden md:flex">{{ category }}</a>
    {% endif %}
  {% endfor %}

  <div class="flex-none gap-2">
    <div class="dropdown dropdown-end">
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div tabindex="0" role="button" class="btn btn-ghost">
          <div class="mr-4"><b>{{ app.user.name ?? app.user.email|split('@')[0] }}</b></div>
          <div class="w-10 rounded-full">
            <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Exampleavatar.png" />
          </div>
        </div>
        <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-white rounded-box w-52">
          <b class="p-1 ml-2">{{ app.user.name ?? app.user.email|split('@')[0] }}</b>
          <li><a href="{{ path('app_myloans') }}">Mes demandes</a></li>
          <li><a href="{{ logout_path(key = null) }}">Se d√©connecter</a></li>
        </ul>
      {% else %}
        <div tabindex="0" role="button" class="btn btn-ghost">
          <div class="w-10 rounded-full">
            <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Exampleavatar.png" />
          </div>
        </div>
        <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-white rounded-box w-52">
          <a href="{{ path('app_login') }}" class="btn btn-ghost">Se connecter</a>
        </ul>
      {% endif %}
    </div>
  </div>

</div>